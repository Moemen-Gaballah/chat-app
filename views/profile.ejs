<%- include('partials/header') %>
<%- include('partials/navbar') %>
    <div class="container">
        <div class="row">
            <div class="col col-12 col-md-4">
                <img src="/<%= userImage %>">
            </div>
            <div class="col col-12 col-md-6">
                <h3><%= username %></h3>
                <% if(!isOwner) { %>

                <form method="POST">
                    <input type="hidden" name="myId" value="<%= myId %>">
                    <input type="hidden" name="myName" value="<%= myName %>">
                    <input type="hidden" name="myImage" value="<%= myImage %>">
                    <input type="hidden" name="friendId" value="<%= friendId %>">
                    <input type="hidden" name="friendImage" value="<%= userImage %>">
                    <input type="hidden" name="friendName" value="<%= username %>">

                    <% if(isFriends) { %>
                        <input type="submit" value="Delete Friend" class="btn btn-danger" formaction="/friend/delete">
                   <% }else if (isRequestSent) { %>
                       <input type="submit" value="Cancel Request" class="btn btn-danger" formaction="/friend/cancel">
                   <% } else if (isRequestRecieved) { %>
                        <input type="submit" value="Accept Friend Request" class="btn btn-success" formaction="/friend/accept">
                        <input type="submit" value="Reject" class="btn btn-danger" formaction="/friend/reject">
                   <% } else { %>
                        <input type="submit" value="Add" class="btn btn-success" formaction="/friend/add">
                   <% } %>

                </form>

                <% } %>
            </div>
        </div>
    </div>

<%- include('partials/scripts') %>

<%- include('partials/footer') %>